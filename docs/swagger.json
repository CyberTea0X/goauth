{
    "swagger": "2.0",
    "info": {
        "description": "Simple authentication service",
        "title": "Golang Authentication microservice",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {},
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "0.01"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/auth": {
            "get": {
                "description": "Check if request token is valid and user is authorized",
                "summary": "Authenticate request",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/guest": {
            "post": {
                "description": "authorizes user as guest",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "guest authorization",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.GuestOutput"
                        }
                    }
                }
            }
        },
        "/health_check": {
            "get": {
                "description": "do healthcheck",
                "summary": "healthcheck",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "definitions": {
        "controllers.GuestOutput": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string",
                    "example": "token"
                },
                "expires_at": {
                    "type": "integer",
                    "example": 244534234
                },
                "refresh_token": {
                    "type": "string",
                    "example": "token"
                }
            }
        }
    },
    "externalDocs": {
        "description": "OpenAPI",
        "url": "https://swagger.io/resources/open-api/"
    }
}